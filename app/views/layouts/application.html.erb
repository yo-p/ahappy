<!DOCTYPE html>
<html>
  <head>
    <title>Ahappy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-navi" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <div class="navbar-brand">
          <%= link_to 'ahappy', root_path %>
        </div>
      </div>

      <div class="collapse navbar-collapse" id="bs-navi">
        <ul class="nav navbar-right navbar-nav">
        <% if user_signed_in? %>
          <li>  
            <%= link_to user_path(current_user) do %>
              <%= fa_icon("home",text: "ホーム")%>
            <% end %>
          </li>
          <li><%= link_to '投稿一覧', tweets_path %></li>
          <li><%= link_to '新規投稿', new_tweet_path %></li>
          <li>
              <% if unchecked_notices.any? %>
                <i class="fa fa-circle" style="color: red;"></i>
              <% end %>
          </li>
          <li><%= link_to '通知', notices_path %></li>
          <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
        <% else %>
          <li><%= link_to 'サインアップ', new_user_registration_path %></li>
          <li><%= link_to 'ログイン', new_user_session_path %></li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
    

      <%= yield %>
    </div>

  </body>
</html>
