<!DOCTYPE html>
<html>
  <head>
    <title>Ahappy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class = "container">
        <div class = "row">
          <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <ul>
              <% if user_signed_in? %>
                <li class = "logo col-xs-4"><%= link_to 'A!!happy', root_path %></li>
                <li class = "nav-list col-xs-2"><%= link_to 'Home', user_path(current_user) %></li>
                <li class = "nav-list col-xs-2"><%= link_to 'Tweets', tweets_path %></li>
                <li class = "nav-list col-xs-2"><%= link_to 'New Tweet', new_tweet_path %></li>
                <li class = "nav-list col-xs-2"><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
              <% else %>
                <li class = "logo col-xs-8"><%= link_to 'A!!happy', root_path %></li>
                <li class = "nav-list col-xs-2" ><%= link_to 'Sign Up', new_user_registration_path %></li>
                <li class = "nav-list col-xs-2" ><%= link_to 'Login', new_user_session_path %></li>
              <% end %>
            </ul>
          </nav>
        </div>
      </div>
    </header>

    <div class = "container">
      <%= yield %>
    </div>

  </body>
</html>
