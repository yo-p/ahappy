<% if current_user.already_favorited?(@tweet) %>
  <%= link_to tweet_favorites_path(@tweet.id), remote: true, method: :delete  do %>
    <i class="fa fa-heart fa-4x" aria-hidden = "true" style = "color: red;"></i>
      <%= @tweet.favorites.count %>
  <% end %>
<% else %>
  <%= link_to tweet_favorites_path(@tweet.id), remote: true, method: :post do %>
    <i class="fa fa-heart fa-4x" aria-hidden = "ture" style = "color: #C0C0C0;"></i>
      <%= @tweet.favorites.count %>
  <% end %>
<% end %>
