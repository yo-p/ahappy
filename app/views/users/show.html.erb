    <% if flash[:notice] %>
        <%= flash[:notice] %>
    <% end %>
    <div class = "row">
        <div class = "col-xs-3">
            <strong>ユーザー情報</strong>
            <%= render 'users/user_info' %>
        </div>
        <div class = 'col-xs-9' >
            <table class = "table table-hover" >
                <thead>
                    <tr>
                        <th>写真</th>
                        <th>ジャンル</th>
                        <th>タイトル</th>
                        <th>名前</th>
                        <th>コメント</th>
                        <th>お気に入り</th>
                    </tr>
                </thead>
                <tbody>
                <% @tweets.each do |tweet| %>
                    <tr>
                        <td>
                            <%= link_to tweet_path(tweet) do %>
                                <%= attachment_image_tag tweet, :image, size: "50x50",format:"jpeg" %>
                            <% end %>
                        </td>
                        <td><% tweet.genres.each do |genre| %>
                                <%= genre.type %>
                                <br>
                            <% end %></td>
                        <td><%= link_to tweet.title, tweet %></td>
                        <td><%= tweet.user.name %></td>
                        <td><%= tweet.comments.count %></td>
                        <td><%= tweet.favorites.count %></td>
                    </tr>
                <% end %>
                </tbody>
            </table>
        </div>
    </div>

