    <% if flash[:notice] %>
        <%= flash[:notice] %>
    <% end %>
    <div class = "row">
        <div class = "col-xs-3">
            <%= render 'users/user_info' %>
        </div>
        
        <div class = 'col-xs-9' >
            <table class = "table table-hover" >
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Genre</th>
                        <th>Title</th>
                        <th>Name</th>
                        <th>Comment</th>
                        <th>Favorite</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                <% @tweets.each do |tweet| %>
                    <tr>
                        <td>
                            <%= link_to tweet_path(tweet) do %>
                                <%= attachment_image_tag tweet, :image, size: "50x50",format:"jpeg" %>
                            <% end %>
                        </td>
                        <td><% tweet.genres.each do |genre| %>
                                <%= genre.type %>
                                <br>
                            <% end %></td>
                        <td><%= link_to tweet.title, tweet %></td>
                        <td><%= tweet.user.name %></td>
                        <td><%= fa_icon("comments",text: tweet.comments.count) %></td>
                        <td><%= fa_icon("heart",text: tweet.favorites.count) %></td>
                        <td><% if tweet.user_id == current_user.id %>
                                <%= link_to 'Destroy', @tweet, method: :delete, class: "btn btn-danger" %>
                            <% end %></td>
                    </tr>
                <% end %>
                </tbody>
            </table>
        </div>
    </div>

