    <% if flash[:notice] %>
        <%= flash[:notice] %>
    <% end %>
    <div class = "row">
        <div class = "col-xs-3">
            <table class = "table "> 
                <tr>
                    <td><%= attachment_image_tag @user, :profile_image, size: "100x100",format:"jpeg" %></td>
                </tr>
                <tr>
                    <td><%= @user.name %></td>
                </tr>
                <tr>
                    <td><%= @user.introduction %></td>
                </tr>
                <tr>
                    <div class = "row">
                        <td><%= link_to 'お気に入り', favorites_index_path(@favorites), class: "btn btn-primary btn-lg btn-block" %></td>
                    </div>
                    
                </tr>
                    <td><%= link_to 'プロフィール編集', edit_user_path,  class: "btn btn-success btn-lg btn-block" %></td>
            </table>
        </div>

        <div class = 'col-xs-9' >
            <table class = "table table-hover" >
                <thead>
                    <tr>
                        <th>写真</th>
                        <th>ジャンル</th>
                        <th>タイトル</th>
                        <th>名前</th>
                        <th>コメント</th>
                        <th>お気に入り</th>
                    </tr>
                </thead>
                <tbody>
                <% @tweets.each do |tweet| %>
                    <tr>
                        <td>
                            <%= link_to tweet_path(tweet) do %>
                                <%= attachment_image_tag tweet, :image, size: "50x50",format:"jpeg" %>
                            <% end %>
                        </td>
                        <td><% tweet.genres.each do |genre| %>
                                <%= genre.type %>
                                <br>
                            <% end %></td>
                        <td><%= link_to tweet.title, tweet %></td>
                        <td><%= tweet.user.name %></td>
                        <td><%= tweet.comments.count %></td>
                        <td><%= tweet.favorites.count %></td>
                    </tr>
                <% end %>
                </tbody>
            </table>
        </div>
    </div>

