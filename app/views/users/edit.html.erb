<div class = "container">
<div calss="row">
    <div calss="col-xs-6">
        <h1>Edit</h1>
        <% @user.errors.full_messages.each do |message| %>
            <%= message %>
        <% end %>
        <%= form_for(@user) do |f| %>
        <table calss = "table">
            <tr>
                <th width="100"height="100">Image</th>
                <td ><%= f.attachment_field :profile_image %></td>
            </tr>
            <tr>
                <th width="100"height="100">Name</th>
                <td><%= f.text_field :name %></td>
            </tr>
            <tr>
                <th width="100"height="100">Introduction</th>
                <td><%= f.text_area :introduction, :size=>"60x3" %></td>
            </tr>
        </table>
            <%= f.submit 'Change', class:"btn btn-info"%>
        <% end %>
    </div>
</div>


