<div calss="row">
    <div calss="col-xs-6">
        <h1>プロフィール編集</h1>
        <% @user.errors.full_messages.each do |message| %>
            <%= message %>
        <% end %>
        <%= form_for(@user) do |f| %>
        <table calss = "table">
            <tr>
                <th>写真</th>
                <td><%= f.attachment_field :profile_image %></td>
            </tr>
            <tr>
                <th>名前</th>
                <td><%= f.text_field :name %></td>
            </tr>
            <tr>
                <th>自己紹介</th>
                <td><%= f.text_area :introduction %></td>
            </tr>
        </table>
            <%= f.submit '変更する'%>
        <% end %>
    </div>
</div>


