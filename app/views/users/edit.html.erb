<div class = "container">
  <div calss="row">
    <div calss="col-xs-6">
      <% if @user.errors.any? %>
        <h3><%= @user.errors.count %>箇所エラーがあります</h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
      <% end %>
      <h1>プロフィール編集</h1>
        <%= form_for(@user) do |f| %>
          <table calss = "table">
            <tr>
              <th width="150"height="100">プロフィール画像</th>
              <td><%= f.attachment_field :profile_image %></td>
            </tr>
            <tr>
              <th width="100"height="100">名前</th>
              <td><%= f.text_field :name %></td>
            </tr>
            <tr>
              <th width="100"height="100">自己紹介</th>
              <td><%= f.text_area :introduction, :size=>"60x3" %></td>
            </tr>
          </table>
          <%= f.submit '変更する', class:"btn btn-info"%>
        <% end %>
    </div>
  </div>
</div>


