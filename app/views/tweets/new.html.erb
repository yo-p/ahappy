<div class = "row" >
<% @tweet.errors.full_messages.each do |message| %>
            <%= message %>
        <% end %>
        <h1>つぶやき</h1>
        <%= form_for @tweet do |f| %>
            <table>
                <tr>
                    <th><%= f.label :写真 %></th>
                    <td><%= f.attachment_field :image %></td>
                </tr>
                <tr>
                    <th><%= f.label :タイトル %></th>
                    <td><%= f.text_field :title %></td>
                    </tr>
                <tr>
                    <th><%= f.label :感想 %></th>
                    <td><%= f.text_area :body %></td>
                </tr>
                <tr>
                    <th><%= f.label :ジャンル %></th>
                    <td><%= f.collection_check_boxes(:genre_ids, Genre.all, :id, :type) do |b| %>
                            <%= b.label {b.check_box + b.text} %>
                        <% end %></td>
                    </tr>
            </table>
            <%= f.submit 'つぶやいちゃう' %>
        <% end %>
</div>