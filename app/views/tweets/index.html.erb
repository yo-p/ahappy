<div class="row">
<h1>みんなの投稿</h1>
    <%= render 'tweets/search_form'%>
    <table class = "table table-hover" >
        <thead>
            <tr>
                <th>写真</th>
                <th>ジャンル</th>
                <th>タイトル</th>
                <th>名前</th>
                <th>コメント</th>
                <th>お気に入り</th>
            </tr>
        </thead>
            <tbody>
                <% @tweets.each do |tweet| %>
                <tr>
                    <td>
                        <%= link_to tweet_path(tweet) do %>
                            <%= attachment_image_tag tweet, :image, size: "50x50",format:"jpeg" %>
                        <% end %></td>
                    <td><% tweet.genres.each do |genre| %>
                            <%= genre.type %>
                            <br>
                        <% end %></td>
                    <td><%= link_to tweet.title, tweet %></td>
                    <td><%= link_to tweet.user.name, tweet.user %></td>
                    <td><%= tweet.comments.count %></td>
                    <td><%= tweet.favorites.count %></td>
                </tr>
                <% end %>
            </tbody>
    </table>
</div>
